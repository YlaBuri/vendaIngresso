<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="ticket"
            type="br.com.ticketca.model.Ticket" />
    </data>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <TextView
                android:id="@+id/fragment_select_date_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_margin="32dp"
                android:text="@{ticket.titulo}"
                android:textColor="#373A42"
                android:textSize="28sp"
                android:textStyle="bold"
                tools:text="Brighlight Music Festival"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />


            <Spinner
                android:id="@+id/fragment_select_date_spinner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="32dp"
                android:prompt="@color/white"
                android:spinnerMode="dropdown"
                app:layout_constraintTop_toBottomOf="@id/fragment_select_date_title"
                app:layout_constraintStart_toStartOf="@id/fragment_select_date_title"/>

            <ListView
                android:id="@+id/fragment_list"
                android:layout_width="match_parent"
                android:layout_height="200dp"
                app:layout_constraintStart_toStartOf="parent"
                android:layout_marginTop="16dp"
                android:layout_marginStart="32dp"
                android:layout_marginEnd="32dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintBottom_toTopOf="@+id/fragment_select_date_btn"
                app:layout_constraintTop_toBottomOf="@id/fragment_select_date_spinner"
                />

            <Button
                android:id="@+id/fragment_select_date_btn"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="48dp"
                android:layout_marginStart="48dp"
                android:layout_marginEnd="48dp"
                android:textAllCaps="false"
                android:textColor="@color/white"
                android:alpha="0.9"
                android:background="@drawable/ic_activity_login_buttonbackground"
                android:text="Pagar"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintBottom_toBottomOf="parent" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </ScrollView>
</layout>